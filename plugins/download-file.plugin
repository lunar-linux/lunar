plugin_source_download_file()  {
  local FILE DIR

  # check if we can handle this type of URL:
  if [ ${1:0:7} != "file://" ]; then
    return 2
  fi
  debug_msg "plugin_source_download_file ($@)"

  FILE=${1:7}
  if [[ $4 != y ]] ; then
    DIR=${FILE%/}
    FILE="$DIR/$2"
  fi

  cp "$FILE" "$3/$2"
}


plugin_register SOURCE_DOWNLOAD plugin_source_download_file
